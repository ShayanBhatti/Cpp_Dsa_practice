#include<iostream>

using namespace std;
void printArray(int arr[],int n){
	for (int i = 0 ;i<n;i++){
		cout<<" "<<arr[i];
	}
	cout<<endl;
}
void InputArray(int arr[],int n){
	cout<<"Enter the elements you want to enter"<<endl;
	for (int i = 0 ;i<n;i++){
		cin>>arr[i];
	}
	cout<<endl;
}
int main(){
	int n;
	cout<<"Enter the Range of array"<<endl;
int array[n];
InputArray(array,n);
	int sum=0;
	float avg=0;
	for (int i=0;i<n;i++){
		sum+=array[i];
	}
	avg =static_cast<float>(sum/n);
	cout<<"The Average of the Given array is :"<<avg<<endl;
printArray(array,n);
	return 0;
}


